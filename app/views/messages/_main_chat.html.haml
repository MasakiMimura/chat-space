.main-chat
  .main-chat__group-info
    .main-chat__group-info__group
      .main-chat__group-info__group__name
        = @group.name
      .main-chat__group-info__group__member
        Members:
        - @group.users.each do |user|
          = user.name
    = link_to "#", class: "main-chat__group-info__btn" do
      .main-chat__group-info__btn--edit
        Edit
  .main-chat__message-list
    = render @messages
    
  .main-chat__message-from
    = form_for [@group, @message], html: {class: 'main-chat__message-from__form-group'} do |f|
      .main-chat__message-from__form-group__input-group
        = f.text_field :content, class: 'main-chat__message-from__form-group__input-group__message-input', placeholder: 'type a message'
        = f.label :image, class: 'main-chat__message-from__form-group__input-group__image-input' do
          = icon('fas', 'image', class: 'icmain-chat__message-from__group__image-input--iconon')
          = f.file_field :image, class: 'main-chat__message-from__form-group__input-group__image-input--hidden'
      = f.submit 'Send', class: 'main-chat__message-from__form-group__btn--send'
