.main-chat__message-list__member-info{data: {id: message.id}}
  .main-chat__message-list__member-info__member
    = message.user.name
  .main-chat__message-list__member-info__posted-date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main-chat__message-list__member-message
  - if message.content.present?
    %p.lower-message__content
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
