.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-item
      %h3.side-bar__user-name__top-item__name
        = current_user.name
      .side-bar__user-name__top-item__icons
        = link_to new_group_path, class: "side-bar__user-name__top-item__icons__btn--edit" do
          = icon('fa', 'edit', class: "side-bar__user-name__top-item__icons__btn--edit--icon")
          %span<>
        = link_to edit_user_path(current_user), class: "side-bar__user-name__top-item__icons__btn--cog" do
          = icon('fa', 'cog', class: "side-bar__user-name__top-item__icons__btn--cog--icon")
          %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "side-bar__group-list__group" do  
          = group.name
        .side-bar__group-list__message
